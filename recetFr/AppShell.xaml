<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="recetFr.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:recetFr.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="recetFr">

    <!-- Meals List Page -->
    <ShellContent
        Title="Meals"
        ContentTemplate="{DataTemplate local:MealsPage}"
        Route="MealsPage" />

    <!-- Edit Meal Page -->
    <ShellContent
        Title="Edit Meal"
        ContentTemplate="{DataTemplate local:EditMealPage}"
        Route="EditMealPage" />

    <!-- Add Meal Page -->
    <ShellContent
        Title="Add Meal"
        ContentTemplate="{DataTemplate local:AddMealPage}"
        Route="AddMealPage" />

</Shell>
