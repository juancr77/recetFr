
<Shell
    x:Class="recetFr.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:recetFr.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="recetFr">
  

    <TabBar>
        <ShellContent Title="Login" Route="LoginPage" ContentTemplate="{DataTemplate local:LoginPage}" />
        <!-- Página principal -->
        <ShellContent Title="Inicio" ContentTemplate="{DataTemplate local:HomePage}" />

        <!-- Página de comidas -->
        <ShellContent Title="Comidas" ContentTemplate="{DataTemplate local:MealsPage}" />

        <!-- Página para agregar comidas -->
        <ShellContent Title="Agregar Comida" ContentTemplate="{DataTemplate local:AddMealPage}" />

        <!-- Página de búsqueda de comidas -->
        <ShellContent Title="Buscar" ContentTemplate="{DataTemplate local:MealsSearchPage}" />
    </TabBar>
</Shell>
